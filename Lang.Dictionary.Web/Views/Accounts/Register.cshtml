@using Lang.Dictionary.Web.Models.Accounts;
@model RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<form method="post">
    @Html.ValidationSummary(excludePropertyErrors: true)
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Email)
        @Html.EditorFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Name)
        @Html.EditorFor(x => x.Name)
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Password)
        @Html.EditorFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.RepeatePassword)
        @Html.EditorFor(x => x.RepeatePassword)
        @Html.ValidationMessageFor(x => x.RepeatePassword)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.BaseLanguageId)
        @Html.DropDownListFor(x => x.BaseLanguageId, (IEnumerable<SelectListItem>)ViewBag.Languages)
        @Html.ValidationMessageFor(x => x.BaseLanguageId)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.StudyLanguageId)
        @Html.DropDownListFor(x => x.StudyLanguageId, (IEnumerable<SelectListItem>)ViewBag.Languages)
        @Html.ValidationMessageFor(x => x.StudyLanguageId)
    </div>
    <input type="submit" value="Зареєструватись"/>
</form>
